# VaporLAX E-commerce Environment Variables

# Stripe Configuration
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# For production, use your live keys:
# VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api

# App Configuration
VITE_APP_NAME=VaporLAX
VITE_APP_URL=http://localhost:3000

# Age Verification
VITE_MINIMUM_AGE=21

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT_SUPPORT=false
VITE_ENABLE_NEWSLETTER=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_MOCK_PAYMENTS=true

# Social Media Links (optional)
VITE_FACEBOOK_URL=https://facebook.com/vaporlax
VITE_TWITTER_URL=https://twitter.com/vaporlax
VITE_INSTAGRAM_URL=https://instagram.com/vaporlax

# Contact Information
VITE_CONTACT_EMAIL=info@vaporlax.com
VITE_CONTACT_PHONE=1-800-VAPOR-LAX
VITE_CONTACT_ADDRESS=Los Angeles, CA

# Shipping Configuration
VITE_FREE_SHIPPING_THRESHOLD=50
VITE_STANDARD_SHIPPING_COST=5.99
VITE_EXPRESS_SHIPPING_COST=12.99

# Tax Configuration
VITE_DEFAULT_TAX_RATE=0.08

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_FACEBOOK_PIXEL_ID=

# Error Tracking (optional)
VITE_SENTRY_DSN=

# Newsletter Service (optional)
VITE_MAILCHIMP_API_KEY=
VITE_CONVERTKIT_API_KEY=
